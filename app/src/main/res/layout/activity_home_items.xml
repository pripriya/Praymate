<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/linearl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/linear"
        android:background="@drawable/tpray"
        android:layout_width="fill_parent"
        android:layout_height="200.0dip">

        <TextView android:gravity="top|left|center"
            android:id="@+id/searchTextView"
            android:background="@drawable/textviewimage"
            android:paddingLeft="10.0dip"
            android:paddingTop="14.0dip"
            android:paddingBottom="13.0dip"
            android:layout_width="340.0dip"
            android:layout_height="50.0dip"
            android:hint="@string/search_hint"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/searchimage"
            android:paddingEnd="10.0dip" />
    </RelativeLayout>

        <Button android:gravity="left"
        android:id="@+id/nearByTemples"
        android:background="@drawable/button"
            android:paddingLeft="10.0dip"
            android:paddingTop="17.0dip"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:text="Near By Temples" />

    <Button android:gravity="left"
        android:id="@+id/favourites"
        android:background="@drawable/button"
        android:paddingLeft="10.0dip"
        android:paddingTop="17.0dip"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_marginTop="20.0dip"
        android:text="Favourites" />

    <Button android:gravity="left"
        android:id="@+id/bookings"
        android:background="@drawable/button"
        android:paddingLeft="10.0dip"
        android:paddingTop="17.0dip"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:text="Bookings"
        android:layout_below="@id/favourites" />

    <Button android:gravity="left"
        android:id="@+id/settings"
        android:background="@drawable/button"
        android:paddingLeft="10.0dip"
        android:paddingTop="17.0dip"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_marginTop="20.0dip"
        android:text="Settings"
        android:layout_below="@+id/textView2" />

    <Button android:gravity="left"
        android:id="@+id/signOutButton"
        android:background="@drawable/button"
        android:paddingLeft="10.0dip"
        android:paddingTop="17.0dip"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:text="Sign out"
        android:layout_below="@id/settings" />
</LinearLayout>