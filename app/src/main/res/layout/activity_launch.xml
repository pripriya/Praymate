<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#ffffffff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:id="@+id/imgLogo"
        android:layout_width="200.0dip"
        android:layout_height="200.0dip"
        android:layout_marginTop="97.0dip"
        android:src="@drawable/geval6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="60.0dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <Button android:textSize="20.0dip"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/signin_button"
            android:background="@drawable/button_pressed"
            android:layout_width="190.0dip"
            android:layout_height="60.0dip"
            android:text="Sign In"
            android:layout_weight="0.55"
            android:layout_alignParentTop="true"
            android:textAlignment="4"
            android:layout_alignParentStart="true" />

        <Button android:textSize="20.0dip"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/signup_button"
            android:background="@drawable/button_pressed"
            android:layout_width="190.0dip"
            android:layout_height="60.0dip"
            android:text="Sign Up"
            android:layout_weight="0.55"
            android:layout_alignParentTop="true"
            android:textAlignment="4"
            android:layout_toEndOf="@id/signin_button" />
    </LinearLayout>
</RelativeLayout>