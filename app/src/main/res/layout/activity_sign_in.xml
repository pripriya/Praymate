<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:padding="16.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:textSize="20.0sp"
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username" />

    <EditText android:id="@+id/usernameEditText"
        android:background="@drawable/textbox"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginTop="10.0dip"
        android:hint="Enter Username"
        android:inputType="textEmailAddress">
        <requestFocus />

    </EditText>
    <TextView android:textSize="20.0sp"
        android:id="@id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:text="Password" />

    <EditText android:id="@id/passwordEditText"
        android:background="@drawable/textbox"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginTop="10.0dip"
        android:hint="Enter Password"
        android:ems="10"
        android:inputType="textPassword" />

    <LinearLayout android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_marginTop="8.0dip"
        android:weightSum="1.0">

        <CheckBox android:textSize="15.0dip"
            android:layout_gravity="center_vertical"
            android:id="@+id/rememberUsernameCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me" />

    </LinearLayout>
    <Button android:textSize="20.0sp"
        android:textColor="#ffffffff"
        android:id="@+id/signInButton"
        android:background="@drawable/button_pressed"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_marginTop="20.0dip"
        android:text="Sign In" />

    <LinearLayout android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/progressCircle"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ProgressBar android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>